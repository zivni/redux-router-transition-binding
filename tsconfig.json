{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "lib",
        "declaration": false,
        "sourceMap": false,
        "moduleResolution": "node",
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "files": [
        "src/index.ts"
    ]
}